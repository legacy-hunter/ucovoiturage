{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
<div class="row">
<div class="col-lg-4">
   
</div>
    <div class="col-lg-8" style="height: 100px; width: 100px;">
      
      
       {% for type, messages in app.session.flashbag.get('notif') %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    <strong style="color: blue;"> {{ message }} </strong>
                </div>
            {% endfor %}
        {% endfor %}
      </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-push-2" style="width: 500px;">
               
    <img src="{{ asset('bundles/ucovoiturage/images/image_login.jpeg')}}"  width="200" height="200">
           
</div>
<div class="col-lg-3 col col-md-push-3">
<div class="form-group">
<form action="{{ path("fos_user_security_check") }}" method="post" class="form-group-lg">
     
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <div class="input-group">
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder=""class="form-control"/>
    </div>
    </div>
    <br>
   
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <div class="input-group">
    <input type="password" id="password" name="_password" required="required" class="form-control" />
    </div>
    <br>
    <div>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div> <br> 
    <input class="btn btn-primary" type="submit" value="envoyer"/> <br><br>
    
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
  
</form>
    <a href="{{path('fos_user_registration_register')}}">Pas de compte ?</a> <br>
    <a href="{{path('fos_user_resetting_request')}}">Mot de passe perdu ?</a>
   </div> 
     
</div>
   
</div>
    </div>
{% endblock fos_user_content %}
