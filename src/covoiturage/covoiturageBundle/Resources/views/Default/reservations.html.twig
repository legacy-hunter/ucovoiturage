                            {% for demandes in demandes_rec %}

                                <tr>
                                    <td>
                                        <!--begine of table 1-->
                                        <table class="table table-striped table-hover table-condensed">
                                            <tbody>
                                                <tr>
                                                    <td width="100px" align="left" rowspan="0"><!---->
