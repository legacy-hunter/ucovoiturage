{% extends '::base.html.twig' %}

{% block body -%}
    <h1>annonce list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieudepart</th>
                <th>Lieuarrive</th>
                <th>Datedepart</th>
                <th>Nbplace</th>
                <th>Prix</th>
                <th>Precisions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gestion_annonce_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.lieuDepart }}</td>
                <td>{{ entity.lieuArrive }}</td>
                <td>{% if entity.dateDepart %}{{ entity.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nbPlace }}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.precisions }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gestion_annonce_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gestion_annonce_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('gestion_annonce_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
